<body>
  <!-- Navbar -->
  <nav>
    <div class="logo">üé® Artify</div>
    <ul>
      <li>Home</li>
      <li>Gallery</li>
      <li>Contact</li>
      <li>Log In</li>
      <li>Cart (<span id="cart-count">0</span>)</li>
    </ul>
    <button id="toggle-theme">üåô</button>
  </nav>

  <!-- Gallery -->
  <div class="gallery" id="gallery"></div>

  <script>
    // Painting data
    const paintings = [
      { id: 1, title: 'Sunset Bliss', price: 120, image: 'https://via.placeholder.com/400x300?text=Sunset+Bliss' },
      { id: 2, title: 'Ocean Dreams', price: 150, image: 'https://via.placeholder.com/400x300?text=Ocean+Dreams' },
      { id: 3, title: 'Abstract Flow', price: 200, image: 'https://via.placeholder.com/400x300?text=Abstract+Flow' },
      { id: 4, title: 'Mountain Majesty', price: 180, image: 'https://via.placeholder.com/400x300?text=Mountain+Majesty' },
      { id: 5, title: 'Color Splash', price: 220, image: 'https://via.placeholder.com/400x300?text=Color+Splash' },
      { id: 6, title: 'Calm Forest', price: 140, image: 'https://via.placeholder.com/400x300?text=Calm+Forest' },
    ];

    const gallery = document.getElementById('gallery');
    const cartCount = document.getElementById('cart-count');
    let cart = [];

    // Populate gallery
    paintings.forEach(painting => {
      const card = document.createElement('div');
      card.className = 'card';
      card.innerHTML = `
        <img src="${painting.image}" alt="${painting.title}">
        <div class="card-content">
          <h2>${painting.title}</h2>
          <p>$${painting.price}</p>
          <button>Add to Cart</button>
        </div>
      `;
      const button = card.querySelector('button');
      button.addEventListener('click', () => {
        cart.push(painting);
        cartCount.textContent = cart.length;
        alert(`${painting.title} added to cart!`);
      });
      gallery.appendChild(card);
    });

    // Dark/Light toggle
    const toggleButton = document.getElementById('toggle-theme');
    toggleButton.addEventListener('click', () => {
      document.body.classList.toggle('dark');
      toggleButton.textContent = document.body.classList.contains('dark') ? '‚òÄÔ∏è' : 'üåô';
    });
  </script>
</body>
